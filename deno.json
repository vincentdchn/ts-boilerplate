{
  "version": "1.0.0",
  "description": "A boilerplate for TypeScript projects",
  "author": "Vincent DuchÃªne",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/vincentdchn/typescript-boilerplate.git"
  },
  "keywords": [
    "typescript",
    "boilerplate",
    "deno",
    "deno2"
  ],
  "lock": false,
  "tasks": {
    "dev": "deno run --env-file --allow-read --allow-env --watch src/index.ts",
    "start": "deno run --env-file --allow-read --allow-env src/index.ts",
    "test": "deno test --env-file --allow-read --allow-env",
    "test:watch": "deno test --env-file --allow-read --allow-env --watch",
    "test:coverage": "deno test --env-file --allow-read --allow-env --coverage",
    "lint": "deno lint",
    "fmt": "deno fmt",
    "check": "deno check src/**/*.ts"
  },
  "imports": {
    "@/": "./src/",
    "@cross/log": "jsr:@cross/log@^0.10.5",
    "@safe-env/safe-env": "jsr:@safe-env/safe-env@^0.1.7",
    "@std/assert": "jsr:@std/assert@^1.0.13",
    "@std/expect": "jsr:@std/expect@^1.0.16"
  },
  "compilerOptions": {
    "strict": true,
    "noUncheckedIndexedAccess": true,
    "noImplicitOverride": true,
    "verbatimModuleSyntax": true,
    "lib": ["deno.ns", "es2022", "dom"]
  },
  "lint": {
    "rules": {
      "tags": ["recommended"],
      "include": ["fresh-handler-export", "fresh-server-event-handlers"],
      "exclude": ["no-slow-types"]
    }
  },
  "fmt": {
    "useTabs": false,
    "lineWidth": 80,
    "indentWidth": 2,
    "semiColons": true,
    "singleQuote": false,
    "proseWrap": "preserve"
  },
  "exclude": [
    "coverage/",
    "dist/",
    "node_modules/",
    "migration-backup/"
  ]
}
